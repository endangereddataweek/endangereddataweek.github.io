  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  gem "jekyll-feed"
  gem "jekyll-paginate"
end

gem "google_drive"
gem "google-api-client"
gem "dotenv"
gem "colorize"
gem "chronic"
gem 'geocoder'
gem "rake"

gem 'html-proofer'
gem 'ra11y'

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
